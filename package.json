          "baseIndent": 1
        }
      ],
      "vue/max-attributes-per-line": [
        "error",
        {
          "singleline": 3
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "*.vue"
        ],
        "rules": {
          "indent": "off"
        }
      }
    ]
  }
