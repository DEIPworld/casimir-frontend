{
  "packages": [
    "packages/components/*",
    "packages/directives/*",
    "packages/services/*",
    "packages/utilities/*"
  ],
  "version": "2.1.0",
  "npmClient": "npm",
  "command": {
    "version": {
      "conventionalCommits": true,
      "message": "chore: Publish",
      "ignoreChanges": [
        "**/__fixtures__/**",
        "**/__tests__/**",
        "**/*.md"
      ],
      "includeMergedTags": true
    },
    "publish": {},
    "bootstrap": {
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  }
}
